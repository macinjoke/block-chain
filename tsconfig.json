{
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "typings"],
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "pretty": true
  },
  "include": ["src/**/*", "jest.config.js"]
}
